<ScrollView
    android:background="@drawable/background_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technuclear.lifecall.activities.SelectEmergencyActivity">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:text="Select Your Emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_emergency_select" />


    <ImageView
        android:onClick="onAccident"
        android:src="@drawable/accident"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/select_emergency_heart_attack_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/select_emergency_accident_image" />

    <TextView
        android:layout_marginLeft="40dp"
        android:textSize="25sp"
        android:layout_marginTop="240dp"
        android:textColor="@android:color/white"
        android:text="Accident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_emergency_accident_text" />


    <ImageView
        android:layout_marginTop="13dp"
        android:onClick="onHeartAttack"
        android:src="@drawable/heart_attack"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/select_emergency_heart_attack_image"
        android:layout_below="@+id/select_emergency_select"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginLeft="200dp"
        android:textSize="25sp"
        android:layout_marginTop="240dp"
        android:textColor="@android:color/white"
        android:text="Heart Attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_emergency_heart_attack_text" />

    <ImageView
        android:layout_marginTop="11dp"
        android:onClick="onInjury"
        android:src="@drawable/head_injury"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/select_emergency_head_injury_image"
        android:layout_below="@+id/select_emergency_accident_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/pregnancy"
        android:onClick="onPregnancy"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/select_emergency_head_injury_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/select_emergency_pregnancy_image" />

    <TextView
        android:layout_marginLeft="220dp"
        android:textSize="25sp"
        android:layout_marginTop="460dp"
        android:textColor="@android:color/white"
        android:text="Pregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_emergency_pregnancy_text" />

    <TextView
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:text="Injury"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_emergency_head_injury_text"
        android:layout_alignBaseline="@+id/select_emergency_pregnancy_text"
        android:layout_alignBottom="@+id/select_emergency_pregnancy_text"
        android:layout_alignLeft="@+id/select_emergency_select"
        android:layout_alignStart="@+id/select_emergency_select" />

</RelativeLayout>
</ScrollView>